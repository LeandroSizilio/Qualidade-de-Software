{
  "root": true,
  "ignorePatterns": ["projects/**/*", "dist", "node_modules"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": { "project": ["tsconfig.json"], "createDefaultProgram": true },
      "plugins": ["deprecation", "@typescript-eslint", "@angular-eslint", "sonarjs", "complexity"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:@angular-eslint/recommended"
      ],
      "rules": {
        "deprecation/deprecation": "error",
        "quotes": ["error", "single"],
        "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
        "sonarjs/cognitive-complexity": ["warn", 12],
        "sonarjs/no-duplicate-string": ["warn", { "threshold": 2 }],
        "sonarjs/no-small-switch": "warn",
        "sonarjs/no-identical-functions": "warn",
        "complexity": ["warn", 8],
        "max-lines-per-function": ["warn", { "max": 50, "skipBlankLines": true, "skipComments": true }],
        "max-params": ["warn", 4]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ]
}
